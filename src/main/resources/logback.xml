<?xml version="1.0" encoding="UTF-8"?>
<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://raw.github.com/enricopulatzo/logback-XSD/master/src/main/xsd/logback.xsd">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="de.lathspell.tilgungsrechner2.Prozess" level="INFO"/>
    <logger name="de.lathspell.tilgungsrechner2.formatter.InterhypFormatter" level="INFO"/>
   
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
  
</configuration>